@model Semestrovka.Models.DBModels.Product
@{
     ViewBag.Title = "Удаление";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
 
        <dt>Производитель</dt>
        <dd>
            @Html.DisplayFor(model => model.Producer)
        </dd>
 
        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
 
    <div>
        <form asp-controller="DataBase" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>